{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true
  },
  "extends": ["standard"],
  "rules": {
    "indent": ["error", 4, {"SwitchCase": 1}],
    "no-new-func": "off",
    "no-useless-call": "off",
    "operator-linebreak": [2, "after"],
    "semi": [1, "always"],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "never"
      }
    ]
  },
  "globals": {
    "Granite": "writable",
    "Coral": "readonly"
  }
}
